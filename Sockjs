<!DOCTYPE html>
<html>
<head>
  <title>WebSocket Tester</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    #log { border: 1px solid #ccc; padding: 10px; height: 300px; overflow-y: auto; margin-bottom: 10px; }
    input, button { padding: 8px; margin: 5px 0; }
    #message { width: 80%; }
  </style>
</head>
<body>
  <h2>WebSocket Tester</h2>

  <label>WebSocket URL:</label><br>
  <input type="text" id="wsUrl" placeholder="ws://localhost:8080"><br>
  <button onclick="connect()">Connect</button>
  <button onclick="disconnect()">Disconnect</button>
  <div id="status"></div>

  <h3>Messages</h3>
  <div id="log"></div>

  <input type="text" id="message" placeholder="Type message">
  <button onclick="sendMessage()">Send</button>

  <script>
    let socket;

    function log(message, type = 'info') {
      const logDiv = document.getElementById('log');
      const entry = document.createElement('div');
      entry.textContent = message;
      entry.style.color = type === 'error' ? 'red' : (type === 'received' ? 'green' : 'black');
      logDiv.appendChild(entry);
      logDiv.scrollTop = logDiv.scrollHeight;
    }

    function connect() {
      const url = document.getElementById('wsUrl').value;
      if (!url) return alert("Please enter a WebSocket URL");

      socket = new WebSocket(url);

      socket.onopen = () => {
        document.getElementById('status').textContent = 'Connected ✅';
        log('Connected to ' + url);
      };

      socket.onmessage = (event) => {
        log('Received: ' + event.data, 'received');
      };

      socket.onclose = () => {
        document.getElementById('status').textContent = 'Disconnected ❌';
        log('Connection closed');
      };

      socket.onerror = (err) => {
        log('Error: ' + err.message, 'error');
      };
    }

    function disconnect() {
      if (socket) {
        socket.close();
      }
    }

    function sendMessage() {
      const msg = document.getElementById('message').value;
      if (socket && socket.readyState === WebSocket.OPEN) {
        socket.send(msg);
        log('Sent: ' + msg);
        document.getElementById('message').value = '';
      } else {
        alert("WebSocket is not connected");
      }
    }
  </script>
</body>
</html>
